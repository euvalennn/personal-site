---
const { short_desc, long_desc, temperature, feels_like, icon } = Astro.props;
---

<div class="weather-container widget-container">
  <img
    src=`/weather-icons/${icon}.png`
    alt="current weather status icon"
    class="weather-icon"
  />
  <div class="weather-stats">
    <p><span class="main-weather">{short_desc}</span> - {long_desc}</p>
    <p style="margin-bottom: 5px">
      <span class="main-temp">{temperature}°</span> - feels like {feels_like}°
    </p>
    <p class="weather-credits">
      icons by MalekMasoud on <a
        style="color: #333333"
        href="https://www.deviantart.com/malekmasoud/art/Windows-9x-Styled-Weather-Icons-929048851"
        >DeviantArt</a
      >
    </p>
    <p class="weather-credits">
      weather data from <a
        style="color: #333333"
        href="https://openweathermap.org">openweathermap.org</a
      >
    </p>
  </div>
</div>
<style>
  .weather-container {
    display: flex;
    align-items: center;
    font-weight: 600;
    padding: 16px;
  }

  .weather-icon {
    height: 64px;
    width: 64px;
  }

  .weather-credits {
    margin: 0;
    font-size: 0.75em;
    color: #333333;
  }

  .main-weather,
  .main-temp {
    font-weight: 700;
    font-size: 1.25em;
  }

  .weather-stats {
    margin-left: 20px;
  }
</style>
