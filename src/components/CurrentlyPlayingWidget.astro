---
const { name, artist, cover_art, album } = Astro.props;
---

<div class="spotify-container widget-container">
  <img
    src={cover_art}
    alt="currently playing track album cover art"
    class="cover-art"
  />
  <div class="song-info">
    <h1 class="song-name">{name}</h1>
    <h2 class="artist">{artist}</h2>
    <h3 class="album">{album}</h3>
  </div>
</div>
<style>
  .spotify-container {
    display: flex;
  }

  .cover-art {
    max-height: 200px;
    border-radius: 20px;
  }

  .song-info {
    display: flex;
    flex-direction: column;
    margin-left: 20px;
    justify-content: center;
  }

  .song-name,
  .artist,
  .album {
    margin: 0;
  }

  .song-name {
    font-size: 1.5em;
  }

  .artist {
    font-size: 1.25em;
    color: #555555;
  }

  .album {
    font-size: 1em;
    color: #777777;
  }

  @media screen and (max-width: 850px) {
    .spotify-container {
      flex-direction: column;
      align-items: center;
    }

    .cover-art {
      max-width: 200px;
      margin-bottom: 15px;
    }

    .song-info {
      margin: 0;
    }
  }
</style>
